                <div className="text-4xl mb-4">‚öΩ</div>
                {currentLanguage === 'ko' ? 'Ïù¥ ÎÇ†ÏßúÏóê Ï¢ÖÎ£åÎêú Í≤ΩÍ∏∞Í∞Ä ÏóÜÏäµÎãàÎã§' : 'No finished matches on this date'}
              </div>
            )}
          </div>
        </main>
      </div>
    </div>
  )
}