 */
async function fetchLeagueEvents(leagueId) {
  if (sportsDbEventsCache[leagueId]) {
    return sportsDbEventsCache[leagueId];
  }
  
  try {
    const url = `https://www.thesportsdb.com/api/v1/json/3/eventsnextleague.php?id=${leagueId}`;
    const res = await fetch(url);
    const data = await res.json();
    
    if (data.events?.length > 0) {
      sportsDbEventsCache[leagueId] = data.events;
      console.log(`    üì¶ TheSportsDB: ${data.events.length}Í∞ú Í≤ΩÍ∏∞ Ï∫êÏãú (Î¶¨Í∑∏ ${leagueId})`);
      return data.events;
    }
    
    return [];
  } catch (e) {
    console.log(`    ‚ö†Ô∏è TheSportsDB Ï°∞Ìöå Ïã§Ìå®: ${e.message}`);
    return [];
  }
}

/**
 * ÌåÄ Ïù¥Î¶Ñ Ï†ïÍ∑úÌôî (Îß§Ïπ≠Ïö©)
 */
function normalizeTeamName(name) {
  if (!name) return '';
  return name.toLowerCase()
    .replace(/fc|cf|sc|ac|as|ss|us|rc|cd|ud|sd|rcd|real|sporting|atletico|atl√©tico/gi, '')
    .replace(/[^a-z0-9]/g, '')
    .trim();
}

/**
 * TheSportsDB Í≤ΩÍ∏∞ Î™©Î°ùÏóêÏÑú Îß§Ïπ≠ÎêòÎäî Í≤ΩÍ∏∞ Ï∞æÍ∏∞
 */
function findMatchingEvent(events, homeTeam, awayTeam) {
  if (!events?.length) return null;
  
  const homeNorm = normalizeTeamName(homeTeam);
  const awayNorm = normalizeTeamName(awayTeam);
  
  for (const event of events) {
    const eventHomeNorm = normalizeTeamName(event.strHomeTeam);
    const eventAwayNorm = normalizeTeamName(event.strAwayTeam);
    
    // Ìôà/Ïñ¥Ïõ®Ïù¥ Îëò Îã§ Îß§Ïπ≠
    const homeMatch = eventHomeNorm.includes(homeNorm) || homeNorm.includes(eventHomeNorm);
    const awayMatch = eventAwayNorm.includes(awayNorm) || awayNorm.includes(eventAwayNorm);
    
    if (homeMatch && awayMatch) {
      return event;
    }
    
    // Ïó≠Ïàú Ï≤¥ÌÅ¨ (Ìôà/Ïñ¥Ïõ®Ïù¥ Îí§Î∞îÎÄê Í≤ΩÏö∞)
    const homeMatchReverse = eventHomeNorm.includes(awayNorm) || awayNorm.includes(eventHomeNorm);
    const awayMatchReverse = eventAwayNorm.includes(homeNorm) || homeNorm.includes(eventAwayNorm);
    
    if (homeMatchReverse && awayMatchReverse) {
      return event;
    }
  }
  
  return null;
}

/**
 * TheSportsDBÏóêÏÑú Ïç∏ÎÑ§Ïùº Í∞ÄÏ†∏Ïò§Í∏∞ (Î¶¨Í∑∏ Í∏∞Î∞ò)
 */
async function fetchThumbnailFromLeague(homeTeam, awayTeam, leagueKey) {
  const leagueInfo = LEAGUE_CODE_MAP[leagueKey];
  if (!leagueInfo?.sportsDbId) return null;
  
  // 1. Î¶¨Í∑∏ Í≤ΩÍ∏∞ Î™©Î°ù Í∞ÄÏ†∏Ïò§Í∏∞
  const events = await fetchLeagueEvents(leagueInfo.sportsDbId);
  
  // 2. Îß§Ïπ≠ÎêòÎäî Í≤ΩÍ∏∞ Ï∞æÍ∏∞
  const matchedEvent = findMatchingEvent(events, homeTeam, awayTeam);
  
  if (matchedEvent) {
    // Ïö∞ÏÑ†ÏàúÏúÑ: strThumb > strPoster > strBanner
    if (matchedEvent.strThumb) {
      return { thumbnail: matchedEvent.strThumb + '/medium', type: 'event', source: 'league' };
    }
    if (matchedEvent.strPoster) {
      return { thumbnail: matchedEvent.strPoster + '/medium', type: 'poster', source: 'league' };
    }
    if (matchedEvent.strBanner) {
      return { thumbnail: matchedEvent.strBanner, type: 'banner', source: 'league' };
    }
  }
  
  return null;
}

/**
 * TheSportsDBÏóêÏÑú Ïç∏ÎÑ§Ïùº Í∞ÄÏ†∏Ïò§Í∏∞ (ÌåÄ Í≤ÄÏÉâ fallback)
 */
async function fetchThumbnailFromTeam(homeTeam) {
  try {
    const teamUrl = `https://www.thesportsdb.com/api/v1/json/3/searchteams.php?t=${encodeURIComponent(homeTeam)}`;
    const teamRes = await fetch(teamUrl);
    const teamData = await teamRes.json();
    
    if (teamData.teams?.length > 0 && teamData.teams[0].strBadge) {
      return { thumbnail: teamData.teams[0].strBadge, type: 'badge', source: 'team' };
    }
    
    return null;
  } catch {
    return null;
  }
}

/**
 * ÌÜµÌï© Ïç∏ÎÑ§Ïùº Í∞ÄÏ†∏Ïò§Í∏∞
 */
